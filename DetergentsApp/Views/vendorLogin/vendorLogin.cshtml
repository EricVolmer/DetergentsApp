@model DetergentsApp.Models.vendorLoginViewModel

@{
    ViewBag.Title = "Login";
}
<div class="row justify-content-md-center">
    <div class="card-header">
        <h2 id="team-efficiency" class="col-xs-2">Vendor Login</h2>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("vendorLogin", "vendorLogin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <h4>Username</h4>
                        @Html.TextBoxFor(m => m.userName, "", new {@class = "form-control", placeholder = "Email"})
                    </div>
                    <div class="form-group">
                        <h4>Password</h4>
                        @Html.PasswordFor(m => m.password, new {@class = "form-control", placeholder = "Password"})
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login"/>
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>