@model IEnumerable<DetergentsApp.Models.Product>


@(Html.Kendo().Grid(Model)
    .Name("ProductsList")
    .Columns(columns => 
    {
        columns.Bound(c => c.productName).Width(300);
        columns.Bound(c => c.productDescription).Width(300);
        columns.Bound(c => c.EAN).Width(300);
        columns.Bound(c => c.Category).Width(300);
    })
    .Editable(e => e.Mode((GridEditMode.InLine)))
    .DataSource(d => d 
        .Server()
        .Model(m =>
        {
            m.Id("ProductID");
        })
        )
    .HtmlAttributes(new { style = "width : 800px"})
    )

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    
    
</p>

<table class="table">
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.validFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.ProductID}) |
                @Html.ActionLink("Details", "Details", new {id = item.ProductID}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.ProductID})
            </td>
        </tr>
    }

</table>